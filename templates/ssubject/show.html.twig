{% extends 'base.html.twig' %}

{% block title %}Предмет{% endblock %}

{% block body %}
    <h1>Предмет</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ ssubject.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ ssubject.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ssubject_index') }}">вернуться</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_ssubject_edit', {'id': ssubject.id}) }}">редактировать</a>

    {{ include('ssubject/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Ученики{% endblock %}

{% block body %}
    <h1>Ученики</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>ФИО</th>
                <th>Класс</th>
                <th>действия</th>
            </tr>
        </thead>
        <tbody>
        {% for sstudent in sstudents %}
            <tr>
                <td>{{ sstudent.id }}</td>
                <td>{{ sstudent.fio }}</td>
                <td>{{ sstudent.sclassID }}</td>
                <td>
                    <a href="{{ path('app_sstudent_show', {'id': sstudent.id}) }}">показать</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_sstudent_edit', {'id': sstudent.id}) }}">редактировать</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">записи не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_sstudent_new') }}">Добавить</a>
    {% endif %}
{% endblock %}

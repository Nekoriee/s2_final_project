{% extends 'base.html.twig' %}

{% block title %}Класс{% endblock %}

{% block body %}
    <h1>Класс</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ sclass.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ sclass.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sclass_index') }}">вернуться</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_sclass_edit', {'id': sclass.id}) }}">редактировать</a>

    {{ include('sclass/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
